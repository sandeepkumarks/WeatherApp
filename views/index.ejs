<html>

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet" />
</head>

<body>
    <section class="vh-100">
        <div class="container py-5 h-100">

            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-8 col-lg-6 col-xl-4">

                    <h3 class="mb-4 pb-2 fw-normal">Check the weather forecast testing</h3>

                    <div class="input-group rounded mb-3">
                        <form action="/" class="input-group rounded mb-3">
                            <input type="search" name="q" class="form-control rounded" placeholder="City"
                                aria-label="Search" aria-describedby="search-addon" />
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>

                    <% if(weatherInfo){ %>
                        <div class="card shadow-0 border">
                            <% if(weatherInfo.cod == 200){ %>
                                <div class="card-body p-4">
                                    <h4 class="mb-1 sfw-normal">
                                        <%= weatherInfo.location %>
                                    </h4>
                                    <p class="mb-2">Current temperature: <strong>
                                            <%= weatherInfo.temp %>째C
                                        </strong></p>
                                    <p>Feels like: <strong>
                                            <%= weatherInfo.feelsLike %>째C
                                        </strong></p>
                                    <p>Max: <strong>
                                            <%= weatherInfo.maxTemp %>째C
                                        </strong>, Min: <strong>
                                            <%= weatherInfo.minTemp %>째C
                                        </strong></p>
    
                                    <div class="d-flex flex-row align-items-center justify-content-center">
                                        <p class="mb-0 me-2">
                                            <%= weatherInfo.condition %>
                                        </p>
                                        <!-- <i class="fas fa-cloud fa-3x" style="color: #eee;"></i> -->
                                        <img src="https://openweathermap.org/img/wn/<%= weatherInfo.icon %>@2x.png" alt="weather-logo" width="75">
                                    </div>
                                </div>
                            <% } else {%>
                                <div class="card-body p-4">
                                    <p class="mb-1 sfw-normal">
                                        <%= weatherInfo.message %>
                                    </p>
                                </div>
                            <% }%>
                        </div>
                        <% } %>

                </div>
            </div>

        </div>
    </section>
</body>

</html>